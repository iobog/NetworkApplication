<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.TextFlow?>

<?import org.controlsfx.control.ListActionView?>
<AnchorPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.laborator78.controller.UserController">
    <!-- Main Layout -->
    <VBox alignment="TOP_LEFT" spacing="10.0" style="-fx-padding: 10;">
        <!-- Top Section -->
        <HBox alignment="CENTER_LEFT" spacing="20.0">
            <!-- Profile Circle -->
            <Circle fx:id="profileCircle" fill="#1d8015" radius="40.0" />

            <!-- User Name -->
            <HBox spacing="5.0">
                <Label fx:id="firstNameField" style="-fx-font-size: 24px;" text="Name" />
                <Label fx:id="lastNameField" style="-fx-font-size: 24px;" text="Surname" />
            </HBox>

            <!-- Action Buttons -->
            <HBox alignment="CENTER_LEFT" prefWidth="730.0" spacing="10.0">
                <Button onAction="#onContactRequestButtonClick" style="-fx-font-size: 14px;" text="Contact Request" />
                <Button onAction="#onAddContactButtonClick" style="-fx-font-size: 14px;" text="Add Contact" />
                <Button onAction="#onDeleteContactButtonClick" style="-fx-font-size: 14px;" text="Delete Contact" />
                <Button onAction="#onLogoutButtonClick" style="-fx-font-size: 14px;" text="Log Out" />
                <Button onAction="#onDeleteAccountButtonClick" style="-fx-font-size: 14px;" text="Delete Account" />
            </HBox>
        </HBox>


        <AnchorPane>

            <HBox alignment="CENTER" spacing="20.0">
                <ListView fx:id="contactList" prefHeight="300.0" prefWidth="500.0" />
                <ListView fx:id="nonContactList" prefHeight="300.0" prefWidth="500.0" />
            </HBox>
        </AnchorPane>




        <!-- Bottom Input Section -->
        <HBox alignment="CENTER" spacing="10.0">
            <TextField fx:id="contactNameField" promptText="Contact Name" />
            <TextField fx:id="contactEmailField" promptText="Contact Email" />
            <Button onAction="#onAddContactButtonClick" style="-fx-font-size: 14px;" text="Add Contact" />
        </HBox>

        <!-- Accordion -->
        <Accordion>
            <panes>
                <TitledPane animated="false" text="untitled 1" />
                <TitledPane animated="false" text="untitled 2" />
            </panes>
        </Accordion>
    </VBox>

    <!-- Add Contact Pane (Initially Hidden) -->
    <AnchorPane fx:id="addContactPane" visible="t" style="-fx-background-color: rgba(0, 0, 0, 0.7);" prefWidth="800" prefHeight="600">
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20; -fx-background-color: white;">
            <Label text="Add New Contacts" style="-fx-font-size: 20px;" />
<!--            <ListView fx:id="nonContactList" prefHeight="400" prefWidth="600" />-->
            <Button text="Close" onAction="#onCloseAddContactPane" />
        </VBox>
    </AnchorPane>
</AnchorPane>
