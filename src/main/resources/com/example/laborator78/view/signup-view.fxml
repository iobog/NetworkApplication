<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.laborator78.controller.SignupController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER" spacing="10.0" AnchorPane.leftAnchor="20.0">
        <Label layoutX="187.0" layoutY="99.0" text="First Name:" />
        <TextField fx:id="firstNameField" layoutX="186.0" layoutY="116.0" />

        <Label layoutX="187.0" layoutY="99.0" text="Last Name:" />
        <TextField fx:id="lastNameField" layoutX="186.0" layoutY="116.0" />

        <Label layoutX="187.0" layoutY="99.0" text="Email:" />
        <TextField fx:id="emailField" layoutX="186.0" layoutY="116.0" />


        <Label layoutX="191.0" layoutY="142.0" text="Password:" />
        <PasswordField fx:id="passwordField" layoutX="186.0" layoutY="164.0" prefHeight="26.0" prefWidth="160.0" />

        <Label layoutX="191.0" layoutY="142.0" text="Confirm Password:" />
        <PasswordField fx:id="confirmPasswordField" layoutX="186.0" layoutY="164.0" prefHeight="26.0" prefWidth="160.0" />

        <HBox alignment="CENTER" spacing="20.0">
            <Button layoutX="290.0" layoutY="206.0" onAction="#onCancelButtonClick" text="Cancel" />
            <Button layoutX="187.0" layoutY="206.0" onAction="#onSubmitButtonClick" text="Submit" />
        </HBox>

    </VBox>

</AnchorPane>
