<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="300" prefWidth="500" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.example.laborator78.controller.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="Welcome" />

    <Label fx:id="welcomeText" text="Welcome" style="-fx-font-size: 36px; -fx-font-weight: bold;" />

    <HBox alignment="CENTER" spacing="20.0" prefHeight="100" prefWidth="200">
     <Button mnemonicParsing="false" prefWidth="75.0" prefHeight="20" onAction="#onLoginButtonClick" text="Login" />
     <Button mnemonicParsing="false" prefWidth="75.0" prefHeight="20" onAction="#onSignupButtonClick" text="Signup" />
    </HBox>
</VBox>
