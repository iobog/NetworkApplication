<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane stylesheets="@../css/hello-view-style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.laborator78.controller.HelloController">
    <VBox fx:id="vbox" alignment="CENTER" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <Label fx:id="welcomeText" text="Welcome" />

        <HBox fx:id="hbox" alignment="CENTER" spacing="10.0">
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLoginButtonClick" text="Login" HBox.hgrow="ALWAYS" />
            <Button fx:id="signupButton" mnemonicParsing="false" onAction="#onSignupButtonClick" text="Sign up" HBox.hgrow="ALWAYS" />
        </HBox>
    </VBox>
</AnchorPane>
