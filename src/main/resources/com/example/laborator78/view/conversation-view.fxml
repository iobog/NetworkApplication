<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.laborator78.controller.ConversationController">


    <VBox alignment="CENTER" spacing="10.0" style="-fx-padding: 10">
        <HBox spacing="10.0">
            <Label fx:id="conversationName" style="-fx-font-size: 16px;" HBox.hgrow="ALWAYS"/>
            <Button fx:id="backButton" onAction="#onBackButtonClick" style="-fx-font-size: 14px; " text="Back" />
        </HBox>
        <HBox HBox.hgrow="ALWAYS">
            <ListView fx:id="conversationList" VBox.vgrow="ALWAYS" />
        </HBox>

        <HBox fx:id="replyBox" spacing="10.0" visible="false">
            <Label fx:id="selectedReplyMessageLable" style="-fx-font-size: 14px;" />
            <Button fx:id="clearReplyButton" onAction="#onClearReplyButtonClicked" style="-fx-font-size: 14px; " text="Clear" />
        </HBox>

        <HBox spacing="10.0">
            <TextField fx:id="messageField" prefHeight="30.0" HBox.hgrow="ALWAYS"/>
            <Button fx:id="sendButton" onAction="#onSendButtonClick" style="-fx-font-size: 14px;" text="Send" />
        </HBox>
    </VBox>



</AnchorPane>
