<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="626.0" prefWidth="443.0" stylesheets="@../css/whatsapp.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.laborator78.controller.ConversationController">


    <VBox spacing="10.0" style="-fx-padding: 10" styleClass="root">
        <!-- Header with conversation name and back button -->
        <HBox prefHeight="57.0" prefWidth="444.0" spacing="10.0" styleClass="header">
            <Label fx:id="conversationName" style="-fx-font-size: 16px;" HBox.hgrow="ALWAYS" />
            <Button fx:id="backButton" onAction="#onBackButtonClick" styleClass="back-button" text="Back" />
        </HBox>

        <ListView fx:id="conversationList" styleClass="conversation-list" VBox.vgrow="ALWAYS" />

        <HBox fx:id="replyBox" spacing="10.0" styleClass="reply-box" visible="false">
            <Label fx:id="selectedReplyMessageLabel" styleClass="reply-label" />
            <Button fx:id="clearReplyButton" onAction="#onClearReplyButtonClicked" styleClass="clear-button" text="Clear" />
        </HBox>

        <HBox  spacing="10.0" styleClass="input-box">
            <TextField fx:id="messageField" prefHeight="30.0" styleClass="message-field" HBox.hgrow="ALWAYS" />
            <Button fx:id="sendButton" onAction="#onSendButtonClick" styleClass="send-button" text="Send" />
        </HBox>
    </VBox>



</AnchorPane>
